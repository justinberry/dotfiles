# CPU usage
#
# The script may be called with -w and -c switches to specify thresholds,
# see the script for details.
[cpu_usage]
label=
interval=10
min_width=100%
separator=true

[load_average]
label=
interval=10

# Date Time
#
[time]
label=
command=date '+%a %-d/%-m/%y %H:%M'
interval=5

# Volume indicator
[volume]
label=
instance=Master
interval=once
signal=10
